<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="update-user">
        <form action="/update-user" method="post">
            <div>
                <label for="">First Name:</label>
                <input type="text" name="firstName" value="<%= dataUser.firstName %>">
            </div>
            <div>
                <label for="">Last Name:</label>
                <input type="text" name="lastName" value="<%= dataUser.lastName %>">
            </div>
            <div>
                <label for="">Email:</label>
       
                <input type="text" name="email" value="<%= dataUser.email %>">
            </div>
            <div>
                <label for="">Address:</label>
                <input type="text" name="address" value="<%= dataUser.address %>">
            </div>
            <div>
                <input type="text" name="id" value="<%= dataUser.id %>" />
            </div>
            <div>
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>
    </div>
</body>

</html>