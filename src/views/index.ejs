<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <div>
        <div class="w3-container">
            <h1>List user table</h1>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th> Actions </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i=0; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td>
                                <a href="/detail/user/<%= dataUser[i].id%>" target="_blank">Details</a>
                                <button>Edit</button>
                                <button>Delete</button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>

            </table>
            <div>
                <h5><strong>Create new user</strong></h5>
                <div class="create-user">
                    <form action="/create-new-user" method="POST">
                        <div>
                            <label>First Name</label>
                            <input type="text" name="firstName" />
                        </div>
                        <div>
                            <label>Last Name</label>
                            <input type="text" name="lastName" />
                        </div>
                        <div>
                            <label>Email</label>
                            <input type="text" name="email" />
                        </div>
                        <div>
                            <label>Address</label>
                            <input type="text" name="address" />
                        </div>
                        <button type="submit" style="cursor: pointer;margin-top: 10px;">submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



</body>

</html>