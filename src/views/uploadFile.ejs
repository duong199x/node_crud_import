<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/upload" class="active">Upload</a>
    </div>
    <div class="upload-file">
        <form action="/upload-profile-pic" enctype="multipart/form-data" method="post">
            <div class="">
                <label>Avatar:</label>
                <input type="file" name="profile_pic" />
            </div>
            <div>
                <button class="btn-save" type="submit">Save file</button>
            </div>
        </form>
        <form action="/upload-multiple-file" enctype="multipart/form-data" method="post">
            <div class="">
                <label>upload-multiple-file:</label>
                <input type="file" multiple />
            </div>
            <div>
                <button class="btn-save" type="submit">Save file</button>
            </div>
        </form>
    </div>



</body>

